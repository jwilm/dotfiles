# Screenshot entire screen
bindsym --release Print exec "maim | xclip -sel clip -t image/png && xclip -sel clip -o > ~/Screenshots/$(date +%Y-%m-%d_%H%M%S).png"
# Screenshot active window
bindsym --release $mod+Shift+w exec "maim -i $(xdotool getactivewindow) | xclip -sel clip -t image/png && xclip -sel clip -o > ~/Screenshots/$(date +%Y-%m-%d_%H%M%S).png"
# Screenshot selection
bindsym --release $mod+Shift+s exec "maim -s | xclip -sel clip -t image/png && xclip -sel clip -o > ~/Screenshots/$(date +%Y-%m-%d_%H%M%S).png"

