# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $(pactl info | grep "Default Sink" | awk '{print $3}') +5% && pkill -RTMIN+1 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $(pactl info | grep "Default Sink" | awk '{print $3}') -5% && pkill -RTMIN+1 i3blocks #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $(pactl info | grep "Default Sink" | awk '{print $3}') toggle && pkill -RTMIN+1 # mute sound

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

exec --no-startup-id /usr/bin/compton -b --vsync opengl-swc --config $HOME/.config/compton/compton.conf

# Since I can't figure out how to get pulse audio to reliably restore the
# default sink, just have i3 run the command. Presumably it's something to do
# with it being a USB device and not available when pulse starts up.
